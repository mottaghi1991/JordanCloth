@model Core.Dto.ViewModel.User.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>ورود به سیستم</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <style>
        html {
            height: 100%;
        }
        body {
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            direction: rtl;
            font-family: 'Vazir', sans-serif;
            background-image: url(/img/background.jpg);
            background-repeat:no-repeat;
            background-size:cover
        }

        .signup-login-box {
            background: white;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
        }

        .signup-login-box img {
            display: block;
            margin: 0 auto 1.5rem auto;
            max-width: 150px;
        }

        .signup-login-input {
            border-radius: 10px;
        }

        .login-btn {
            width: 100%;
            font-size: 16px;
            border-radius: 10px;
        }

        }
    </style>
    <partial name="_HeaderLink" />
</head>
<body>
    <div class="signup-login-box">
        <!-- start signup & login box -->

        <img src="~/img/logo.png" alt="لوگو">

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="input-group signup-login-form mb-3">
                <input asp-for="UserName" type="email" class="form-control form-control-lg signup-login-input text-start" placeholder="ایمیل">
            </div>

            <div class="input-group signup-login-form mb-3">
                <input asp-for="PassWord" type="password" class="form-control form-control-lg signup-login-input" placeholder="رمز عبور">
            </div>

            <div class="signup-login-form mb-3">
                <div class="form-check">
                    <input asp-for="IsRemember" class="form-check-input form-check-input-custom" type="checkbox" id="customCheck" checked>
                    <label class="form-check-label ps-1" for="customCheck">
                        مرا به خاطر داشته باش
                    </label>
                </div>
            </div>

            <button type="submit" class="btn btn-danger d-block font-12 login-btn mb-4">
                ورود
            </button>

            <p class="text-center">
                کاربر جدید هستید؟
                <a asp-action="Register" class="underline">ثبت‌ نام</a>
            </p>
            <p class="text-center">
                رمز عبور خود را فراموش کرده‌اید؟
                <a asp-action="ForgetPassword" class="underline">بازیابی رمز عبور</a>
            </p>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <partial name="_Message" />
        <partial name="_FooterLink" />
    }
</body>
</html>
