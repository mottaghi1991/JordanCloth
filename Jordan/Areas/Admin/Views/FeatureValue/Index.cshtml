@model Core.Dto.ViewModel.Store.FeatureValueDto.ShowFeatureValueVM
@{
    ViewData["Title"] = "دسته بندی";
}

<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">@Model.feature.Title لیست گروه ها</h3>
        </div>
        <div class="card-body">
            <p>
                <a class="btn btn-success" asp-action="Create" asp-route-FeatureId="@Model.feature.Id">جدید</a>
            </p>
            <table class="table table-responsive table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FeatureValues.FirstOrDefault().Value)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FeatureValues.FirstOrDefault().Feature.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FeatureValues.FirstOrDefault().Image)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.FeatureValues)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Feature.Title)
                            </td>
                            <td>
                                <img src="@item.Image" style="width:50px" />
                            </td>
                            <td>
                                <a class="btn btn-info" asp-action="Edit" asp-route-featureValueId="@item.Id" >ویرایش</a>
                                <a class="btn btn-link" asp-action="ProductFeatureValue" asp-route-featureValueId="@item.Id">محصولات این دسته</a>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


