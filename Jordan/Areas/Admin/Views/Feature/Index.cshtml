@model IEnumerable<Domain.Store.Feature>
@{
    ViewData["Title"] = "Index";
}


<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title"> دسته بندی بر اساس </h3>
        </div>
        <div class="card-body">
            <p>
                <a class="btn btn-success" asp-action="Create">جدید</a>
            </p>
            <table class="table table-responsive table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.subCategorycategory.SubCategoryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                      
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.subCategorycategory.SubCategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>

                          
                            <td>
                                <a class="btn btn-info" onclick="Edit(@item.Id)">ویرایش</a>
                                <a class="btn btn-primary" asp-action="Index" asp-controller="FeatureValue" asp-route-FeatureId="@item.Id">زیر دسته ها</a>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



