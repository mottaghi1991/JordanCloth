@model IEnumerable<Core.Dto.ViewModel.User.ShowUserBrifViewModel>

        @{
        ViewData["Title"] = "Index";
        }


        <div class="col-md-12">
              <div class="card card-primary">
                   <div class="card-header">
                           <h3 class="card-title">لیست کاربران</h3>
                    </div>
                   <div class="card-body">
                    <p>
                        <a class="btn btn-success" asp-action="Create">جدید</a>
                    </p>
                    <table class="table table-responsive table-hover">
                        <thead>
                            <tr>
                        <th></th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.UserName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                  
                              
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                            <tr>
                            <td>
                                <a asp-action="Edit" class="btn btn-info" asp-route-UserId="@item.UserId">ویرایش</a>
                                <a asp-action="GetExamOfUser" asp-controller="Exams" class="btn btn-primary" asp-route-UserId="@item.UserId">آزمون ها</a>
                                <a asp-action="ChangePosition" asp-controller="User" onclick="return confirm('ایا از مدیر شدن این شخص اطمینان دارید؟')" class="btn btn-danger" asp-route-UserId="@item.UserId">مدیر شود</a>
                            </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                              
                            </tr>
                            }
            
                        </tbody>
                    </table>
                  </div>
              </div>
        </div>
