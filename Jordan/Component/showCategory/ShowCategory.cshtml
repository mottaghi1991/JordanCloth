@model IEnumerable<Domain.Store.SubCategory>

    
<div class="row" style="padding-top:20px">
    <h3 class="text-end mb-4 m-2">دسته بندی</h3>


    @foreach(var item in Model)
    {
        <div class="col-6 col-md-3 mb-4">
            <div class="card CardMain">
                <!-- قسمت بالا (تصویر) -->
                <img src="@item.Image" class="card-img-top card-img-top-category rounded-top " alt="@item.SubCategoryName">
                <!-- قسمت پایین (فلش و دسته بندی) -->
                <div class="card-body text-center d-flex justify-content-center align-items-center flex-md-row p-0">
                    <h5 class="card-title mb-2 mb-md-0 d-flex align-items-center">
                        @item.SubCategoryName
                        <a href="#" class="btn btn-link ms-2">
                            <i class="bi bi-arrow-left-circle PriceAfterOff"></i>
                        </a>
                    </h5>
                </div>
            </div>
        </div>
    }
  