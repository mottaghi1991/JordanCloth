@model IEnumerable<Domain.Store.Product>


<div class="col-md-6">
    <div class="card" style="box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); border-radius: 10px; overflow: hidden; text-align: center;">
        <div class="card-title" style="padding: 1rem; font-weight: bold; font-size: 1.2rem;">
            بیشترین تخفیف
        </div>
        <div class="card-body" style="padding: 1rem;">
            <div class="swiper swiper1" style="max-width: 70%; margin: 0 auto;">
                <div class="swiper-wrapper">
                    @foreach(var item in Model)
                    {
                        <div class="swiper-slide" style="width: 100%; height: auto; padding: 0.5rem; display: flex; flex-direction: column; align-items: center; background-color:#AD8B73 ;">
                            <!-- تصویر -->
                            <div style="width: 100%; position: relative;">
                                <img src="@item.ImageUrl" style="width: 100%; height: 100%; border-radius: 8px;">

                                <!-- درصد تخفیف -->
                                <div class="discount-badge position-absolute top-0 start-0 m-2 bg-danger text-white px-2 py-1 rounded" style="top: 10px; left: 10px;">
                                    25%
                                </div>

                                <!-- آیکون قلب -->
                                <button class="btn btn-link heart-icon position-absolute" type="button" onclick="toggleHeart(this)" style="top: 10px; right: 10px;">
                                    <i class="bi bi-heart HearStyle"></i>
                                </button>
                            </div>

                            <!-- محتوای پایین تصویر -->
                            <div class="text-center" style="margin-top: 10px;">
                                <!-- رتبه‌بندی -->
                                <div class="rating">
                                    <span class="text-warning">&#9733;&#9733;&#9733;&#9733;&#9734;</span>
                                </div>

                                <!-- قیمت -->
                                <p class="price">
                                    <del class="PriceBeforOff">@item.Price تومان</del>
                                    <span class="PriceAfterOff">75,000 تومان</span>
                                </p>

                                <!-- عنوان محصول -->
                                <h6 class="card-title">@item.ProductName</h6>
                            </div>
                        </div>

                    }
                    
                 
                </div>
            </div>
        </div>
    </div>
</div>