<html lang="fa" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>صفحه واکنش‌گرا</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
    <partial name="_HeaderLink" />
    @await RenderSectionAsync("style", false)


    <style>
        .CardMain{
            min-width: 10rem;
            border: none;
            /* box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); */
            border-radius: 20px;
            flex: 1 0 21%;
        }
        .cardCstegory{
            height:fit-content;
        }
        .swiper1 .swiper-slide {
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 20px;
            font-weight: bold;
            color: #fff;
            border-radius: 10px;
            background: #007bff;
        }

        .swiper3 {
            width: 100%;
            height: 100%;
        }

        .main-slider .swiper-slide img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }



        .swiper3 .swiper-slide {
            display: flex;
            justify-content: center;
            align-items: center;
            width: auto; /* تنظیم عرض خودکار */
        }

        .swiper3 .thumbs-slider .swiper-slide img {
            width: 100%; /* تنظیم عرض برای تصاویر کوچک */
            height: auto;
        }

        /* تنظیم اندازه برای اسلایدهای اصلی */
        .main-slider .swiper-slide img {
            width: 100%; /* عرض تصویر 100% از عرض اسلاید */
            height: auto; /* ارتفاع به طور خودکار تنظیم شود تا نسبت ابعاد حفظ شود */
            max-height: 400px; /* حداکثر ارتفاع برای تصاویر اصلی */
            object-fit: cover; /* مطمئن شوید که تصاویر به درستی پر می‌شوند */
            border-radius: 8px; /* گوشه‌های تصویر گرد شوند */
        }

        /* تنظیم اندازه برای تصاویر کوچک (Thumbs) */
        .thumbs-slider .swiper-slide img {
            width: 80px; /* عرض تصویر کوچک */
            height: 80px; /* ارتفاع تصویر کوچک */
            object-fit: cover; /* پر کردن مناسب فضای تصویر */
            border-radius: 5px; /* گوشه‌های تصویر کوچک گرد */
            cursor: pointer; /* تغییر نشانگر ماوس به حالت کلیک */
        }

        .swiper-container {
            width: 100%;
            height: 400px;
        }

        .swiper-slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .caption {
            position: absolute;
            bottom: 20px;
            left: 20px;
            color: white;
            font-size: 20px;
            font-weight: bold;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 10px;
        }
        .PriceAfterOff
        {
            font-size: 1.2rem;
            color: #007bff;
            font-weight: bold;
            margin-left: 10px;
        }
        .PriceBeforOff{
            font-size: 1rem;
            color: #777;
        }
        .HearStyle{
            font-size: 1.5rem;
            color: white;
        }
    </style>
</head>

<body style="overflow-x:  hidden">

    <!-- هدر -->
    <nav class="navbar navbar-expand-lg navbar-light " >
        <div class="container">
            <a class="navbar-brand" href="#"><img src="/Img/logo.png" style="border-radius:50%" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link active" href="#">خانه</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">درباره ما</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">تماس با ما</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- بخش اصلی -->
    <div class="container-fluid px-1 my-3">
        @RenderBody()
    </div>

    <!-- امکانات سایت -->
   
    <partial name="_Footer" />
  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <partial name="_FooterLink" />
    <partial name="_Message" />



    @await RenderSectionAsync("Scripts", required: false)

    

</body>

</html>
